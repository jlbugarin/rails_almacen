<%= simple_form_for @inventory, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association(:product) %>
  <%= f.error_span(:product_id) %>
  <%= f.association(:warehouse) %>
  <%= f.error_span(:warehouse_id) %>
  <%= f.input :stock %>
  <%= f.error_span(:stock) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                inventories_path, :class => 'btn btn-default' %>
<% end %>
